{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tauri-dev",
            "type": "shell",
            "command": "cargo tauri dev",
            "problemMatcher": [
                "$rustc-watch",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "folderOpen",
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            }
        },
        {
            "label": "scss-watch",
            "type": "shell",
            "command": "sass --watch scss-input/:scss-output/ --no-source-map",
            "problemMatcher": [
                "$node-sass"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "folderOpen",
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            }
        }
    ]
}
