{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "cargo",
      "args": [
        "tauri",
        "dev"
      ],
      "isBackground": true,
      "problemMatcher": "$rustc-watch",
      "presentation": {
        "reveal": "silent",
        "echo": false,
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "sass",
      "type": "shell",
      "command": "sass --watch scss-input/:scss-output/ --no-source-map",
      "problemMatcher": "$node-sass",
      "presentation": {
        "reveal": "silent",
        "echo": false,
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "bacon",
      "type": "shell",
      "command": "Start-Process bacon clippy",
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "powershell"
        }
      },
      "presentation": {
        "reveal": "always",
        "echo": false,
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      }
    }
  ]
}