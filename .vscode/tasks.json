{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "cargo",
      "args": [
        "tauri",
        "dev"
      ],
      "isBackground": true,
      "problemMatcher": "$rustc-watch",
      "presentation": {
        "reveal": "silent",
        "echo": false,
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "scss/sass",
      "type": "shell",
      "command": "sass --watch scss-input/:scss-output/ --no-source-map",
      "problemMatcher": "$node-sass",
      "presentation": {
        "reveal": "silent",
        "echo": false,
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
  ]
}
