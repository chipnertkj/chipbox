{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "rootDir": "src",
        "outDir": "dist",
        "jsx": "react-jsx",
        "jsxImportSource": "chipbox-solid-render",
        "paths": {
            "@bindings/*": [
                "../chipbox-solid-render/generated/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "references": [
        {
            "path": "../chipbox-solid-render"
        }
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}
